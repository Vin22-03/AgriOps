# 1Ô∏è‚É£ Base Image
FROM node:20-alpine AS builder

# 2Ô∏è‚É£ Working directory
WORKDIR /app

# 3Ô∏è‚É£ Install dependencies
COPY package*.json ./
RUN npm install --legacy-peer-deps

# 4Ô∏è‚É£ Copy source code
COPY . .

# 5Ô∏è‚É£ Build production app
RUN npm run build

# 6Ô∏è‚É£ Runtime image
FROM node:20-alpine
WORKDIR /app

# Copy from builder
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public
COPY --from=builder /app/package.json ./package.json

# 7Ô∏è‚É£ Expose port
EXPOSE 3000

# 8Ô∏è‚É£ Start Next.js
CMD ["npm", "start"]
