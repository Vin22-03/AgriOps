pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"                     // üåé Default AWS region
        TF_DIR = "terraform"                         // üìÇ Folder containing Terraform code
        AWS_CREDENTIALS = credentials('aws-creds')   // üîê Jenkins credential ID for AWS
        GIT_CREDENTIALS = 'github-creds'             // üîê Jenkins credential ID for GitHub
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo "üîπ Cloning infrastructure repo..."
                git branch: 'main',
                    url: 'https://github.com/Vin22-03/AgriOps.git',
                    credentialsId: "${GIT_CREDENTIALS}"
            }
        }

        stage('Verify Environment Tools') {
            steps {
                echo "üß© Checking environment tools (Terraform, AWS CLI, Docker)..."
                sh '''
                terraform -version
                aws --version
                docker --version
                '''
            }
        }

        stage('Initialize Terraform') {
            steps {
                dir("${TF_DIR}") {
                    echo "üîπ Initializing Terraform..."
                    sh 'terraform init -input=false'
                }
            }
        }

        stage('Validate Terraform Code') {
            steps {
                dir("${TF_DIR}") {
                    echo "üß† Validating Terraform configuration..."
                    sh 'terraform validate'
                }
            }
        }

        stage('Plan Infrastructure Changes') {
            steps {
                dir("${TF_DIR}") {
                    echo "üó∫Ô∏è Creating Terraform plan..."
                    sh '''
                    export AWS_ACCESS_KEY_ID=${AWS_CREDENTIALS_USR}
                    export AWS_SECRET_ACCESS_KEY=${AWS_CREDENTIALS_PSW}
                    terraform plan -input=false -out=tfplan.out
                    '''
                }
            }
        }

        stage('Approval Before Apply') {
            steps {
                script {
                    input message: "‚ö†Ô∏è Review Terraform Plan and Approve Apply?"
                }
            }
        }

        stage('Apply Infrastructure') {
            steps {
                dir("${TF_DIR}") {
                    echo "üöÄ Applying Terraform plan to deploy AWS resources..."
                    sh '''
                    export AWS_ACCESS_KEY_ID=${AWS_CREDENTIALS_USR}
                    export AWS_SECRET_ACCESS_KEY=${AWS_CREDENTIALS_PSW}
                    terraform apply -auto-approve tfplan.out
                    '''
                }
            }
        }

        stage('Post-Deploy Summary') {
            steps {
                echo "‚úÖ Terraform deployment complete!"
                echo "üåø AWS Region: ${AWS_REGION}"
                echo "üßæ Check AWS Console for new resources (S3, SNS, IAM, etc.)"
            }
        }
    }

    post {
        success {
            echo "üéâ SUCCESS: Agri-Vision-Ops infrastructure deployed successfully!"
        }
        failure {
            echo "‚ùå FAILURE: Check console logs for details."
        }
        always {
            echo "üßπ Cleaning Jenkins workspace..."
            deleteDir()
        }
    }
}
