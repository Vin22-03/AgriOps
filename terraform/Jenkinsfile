pipeline {
    agent any

    environment {
        AWS_REGION       = "us-east-1"                      // üåé AWS region
        TF_DIR           = "terraform"                      // üìÇ Terraform folder
        AWS_CREDENTIALS  = credentials('aws-creds')          // üîê AWS credentials ID
        GIT_CREDENTIALS  = 'github-creds'                   // üîê GitHub credentials ID
    }

    stages {

        stage('Checkout Repository') {
            steps {
                echo "üì¶ Cloning AgriVisionOps repository..."
                git branch: 'main',
                    url: 'https://github.com/Vin22-03/AgriOps.git',
                    credentialsId: "${GIT_CREDENTIALS}"
            }
        }

        stage('Verify Tools') {
            steps {
                echo "üß© Verifying Terraform, AWS CLI, and Docker..."
                sh '''
                    terraform -version
                    aws --version
                    docker --version
                '''
            }
        }

        stage('Pre-check Existing VPC') {
            steps {
                script {
                    echo "üîç Checking for existing AgriVisionOps VPC..."
                    def vpcCheck = sh(
                        script: """
                            aws ec2 describe-vpcs \
                            --filters "Name=tag:Project,Values=AgriVisionOps" \
                            --query "Vpcs[*].VpcId" \
                            --region ${AWS_REGION} \
                            --output text || true
                        """,
                        returnStdout: true
                    ).trim()
                    if (vpcCheck) {
                        echo "‚ö†Ô∏è Found existing VPC: ${vpcCheck}. Terraform will reuse it."
                    } else {
                        echo "‚úÖ No existing VPC found. Fresh infra will be created."
                    }
                }
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_DIR}") {
                    echo "‚öôÔ∏è Initializing Terraform with remote backend..."
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
                        sh '''
                        terraform init -input=false -migrate state
                        '''
                    }
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir("${TF_DIR}") {
                    echo "üß† Validating Terraform configuration..."
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("${TF_DIR}") {
                    echo "üó∫Ô∏è Generating Terraform Plan..."
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
                        sh 'terraform plan -input=false -out=tfplan.out'
                    }
                }
            }
        }

        stage('Manual Approval for Apply') {
            steps {
                script {
                    input message: "‚úÖ Review the Terraform plan and approve APPLY?", ok: "Apply Infrastructure"
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir("${TF_DIR}") {
                    echo "üöÄ Deploying infrastructure to AWS..."
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
                        sh 'terraform apply -auto-approve tfplan.out'
                    }
                }
            }
        }

        stage('Infra Summary') {
            steps {
                dir("${TF_DIR}") {
                    echo "üßæ Capturing Terraform outputs..."
                    sh 'terraform output'
                }
            }
        }

        stage('Manual Approval for Destroy') {
            steps {
                script {
                    input message: "‚ö†Ô∏è Do you want to DESTROY all infrastructure?", ok: "Destroy All"
                }
            }
        }

        stage('Terraform Destroy') {
            steps {
                dir("${TF_DIR}") {
                    echo "üí£ Destroying all resources cleanly..."
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
                        sh 'terraform destroy -auto-approve'
                    }
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ SUCCESS: Terraform Infra pipeline completed!"
        }
        failure {
            echo "‚ùå FAILURE: Terraform pipeline failed. Check logs for details."
        }
        always {
            echo "üßπ Cleaning Jenkins workspace..."
            deleteDir()
        }
    }
}
