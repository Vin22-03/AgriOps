pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"                     // ğŸŒ Default AWS region
        TF_DIR = "terraform"                         // ğŸ“‚ Folder containing Terraform code
        AWS_CREDENTIALS = credentials('aws-creds')   // ğŸ” Jenkins credential ID for AWS
        GIT_CREDENTIALS = 'github-creds'             // ğŸ” Jenkins credential ID for GitHub
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo "ğŸ”¹ Cloning infrastructure repo..."
                git branch: 'main',
                    url: 'https://github.com/Vin22-03/AgriOps.git',
                    credentialsId: "${GIT_CREDENTIALS}"
            }
        }

        stage('Verify Environment Tools') {
            steps {
                echo "ğŸ§© Checking environment tools (Terraform, AWS CLI, Docker)..."
                sh '''
                terraform -version
                aws --version
                docker --version
                '''
            }
        }

        stage('Initialize Terraform') {
            steps {
                dir("${TF_DIR}") {
                    echo "ğŸ”¹ Initializing Terraform..."
                    sh 'terraform init -input=false'
                }
            }
        }

        stage('Validate Terraform Code') {
            steps {
                dir("${TF_DIR}") {
                    echo "ğŸ§  Validating Terraform configuration..."
                    sh 'terraform validate'
                }
            }
        }

        stage('Plan Infrastructure Changes') {
            steps {
                dir("${TF_DIR}") {
                    echo "ğŸ—ºï¸ Creating Terraform plan..."
                    sh '''
                    terraform plan \
                        -var "aws_access_key=${AWS_CREDENTIALS_USR}" \
                        -var "aws_secret_key=${AWS_CREDENTIALS_PSW}" \
                        -var "region=${AWS_REGION}" \
                        -out=tfplan.out
                    '''
                }
            }
        }

        stage('Approval Before Apply') {
            steps {
                script {
                    input message: "âš ï¸ Review Terraform Plan and Approve Apply?"
                }
            }
        }

        stage('Apply Infrastructure') {
            steps {
                dir("${TF_DIR}") {
                    echo "ğŸš€ Applying Terraform plan to deploy AWS resources..."
                    sh 'terraform apply -auto-approve tfplan.out'
                }
            }
        }

        stage('Post-Deploy Summary') {
            steps {
                echo "âœ… Terraform deployment complete!"
                echo "ğŸŒ¿ AWS Region: ${AWS_REGION}"
                echo "ğŸ§¾ Check AWS Console for new resources (ECR, S3, IAM, etc.)"
            }
        }
    }

    post {
        success {
            echo "ğŸ‰ SUCCESS: Agri-Vision-Ops infrastructure deployed successfully!"
        }
        failure {
            echo "âŒ FAILURE: Check console logs for details."
        }
        always {
            echo "ğŸ§¹ Cleaning Jenkins workspace..."
            deleteDir()
        }
    }
}

