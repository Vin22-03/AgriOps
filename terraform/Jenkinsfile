pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        TF_DIR     = "terraform"
        GIT_CREDENTIALS = 'github-creds'   // ‚úÖ only store ID here
    }

    options {
        disableConcurrentBuilds()
    }

    stages {

        stage('Checkout Repository') {
            steps {
                echo "üì¶ Cloning AgriVisionOps repository..."
                git branch: 'main',
                    url: 'https://github.com/Vin22-03/AgriOps.git',
                    credentialsId: "${GIT_CREDENTIALS}"
            }
        }

        stage('Verify Tools') {
            steps {
                echo "üß© Verifying Terraform, AWS CLI, and Docker..."
                sh '''
                    terraform -version
                    aws --version
                    docker --version
                '''
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_DIR}") {
                    echo "‚öôÔ∏è Initializing Terraform..."
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
                        sh '''
                        terraform init -reconfigure -input=false -no-color
                        '''
                    }
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir("${TF_DIR}") {
                    echo "üß† Validating Terraform..."
                    sh 'terraform validate -no-color'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("${TF_DIR}") {
                    echo "üó∫Ô∏è Generating Terraform plan..."
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
                        sh '''
                        terraform plan -input=false -out=tfplan.out -no-color
                        '''
                    }
                }
            }
        }

        stage('Approval Before Apply') {
            steps {
                script {
                    input message: "‚ö†Ô∏è Review Terraform Plan before APPLY?"
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir("${TF_DIR}") {
                    echo "üöÄ Applying Terraform..."
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
                        sh '''
                        terraform apply -auto-approve tfplan.out -no-color
                        '''
                    }
                }
            }
        }

        stage('Terraform Output Summary') {
            steps {
                dir("${TF_DIR}") {
                    echo "üßæ Infra summary..."
                    sh 'terraform output -no-color'
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ SUCCESS: ECS Infra deployed!"
        }
        failure {
            echo "‚ùå FAILURE: Check pipeline logs for details."
        }
        always {
            echo "üßπ Cleaning Jenkins workspace..."
            deleteDir()
        }
    }
}
