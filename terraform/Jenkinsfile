pipeline {
    agent any

    environment {
        AWS_REGION       = "us-east-1"                      // üåé AWS region
        TF_DIR           = "terraform"                      // üìÇ Terraform folder
        AWS_CREDENTIALS  = credentials('aws-creds')          // üîê Jenkins AWS credentials
        GIT_CREDENTIALS  = 'github-creds'                   // üîê Jenkins GitHub credentials
    }

    options {
        timestamps()
        ansiColor('xterm')
        disableConcurrentBuilds()                          // avoid backend lock collisions
    }

    stages {

        stage('Checkout Repository') {
            steps {
                echo "üì¶ Cloning AgriVisionOps repository..."
                git branch: 'main',
                    credentialsId: "${GIT_CREDENTIALS}",
                    url: 'https://github.com/Vin22-03/AgriOps.git'
            }
        }

        stage('Verify Tools') {
            steps {
                echo "üß© Verifying Terraform, AWS CLI, and Docker..."
                sh '''
                    terraform -version
                    aws --version
                    docker --version
                '''
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_DIR}") {
                    echo "‚öôÔ∏è Initializing Terraform with remote backend..."
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: "${AWS_CREDENTIALS}"]]) {
                        sh '''
                        terraform init -reconfigure -input=false -no-color || true
                        '''
                    }
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir("${TF_DIR}") {
                    echo "üß† Validating Terraform configuration..."
                    sh 'terraform validate -no-color'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("${TF_DIR}") {
                    echo "üó∫Ô∏è Generating Terraform plan..."
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: "${AWS_CREDENTIALS}"]]) {
                        sh '''
                        terraform plan -input=false -out=tfplan.out -no-color
                        '''
                    }
                }
            }
        }

        stage('Manual Approval Before Apply') {
            steps {
                script {
                    input message: "‚ö†Ô∏è Review Terraform plan and approve APPLY?", ok: "Apply Infrastructure"
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir("${TF_DIR}") {
                    echo "üöÄ Applying Terraform configuration..."
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: "${AWS_CREDENTIALS}"]]) {
                        sh '''
                        terraform apply -auto-approve tfplan.out -no-color
                        '''
                    }
                }
            }
        }

        stage('Post Apply Summary') {
            steps {
                dir("${TF_DIR}") {
                    echo "üßæ Fetching Terraform outputs..."
                    sh '''
                    echo "============================================"
                    echo "üåø AgriVisionOps ECS Infra Deployment Summary"
                    echo "============================================"
                    terraform output -no-color
                    '''
                }
            }
        }

        stage('Manual Approval Before Destroy') {
            when {
                expression { params.DESTROY_INFRA == true }
            }
            steps {
                script {
                    input message: "‚ö†Ô∏è Confirm to DESTROY all infrastructure?", ok: "Destroy Everything"
                }
            }
        }

        stage('Terraform Destroy') {
            when {
                expression { params.DESTROY_INFRA == true }
            }
            steps {
                dir("${TF_DIR}") {
                    echo "üí£ Destroying infrastructure..."
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: "${AWS_CREDENTIALS}"]]) {
                        sh '''
                        terraform destroy -auto-approve -no-color
                        '''
                    }
                }
            }
        }
    }

    parameters {
        booleanParam(name: 'DESTROY_INFRA', defaultValue: false, description: 'Set true to destroy all infrastructure after approval')
    }

    post {
        success {
            echo "‚úÖ SUCCESS: Terraform ECS Infrastructure pipeline completed!"
        }
        failure {
            echo "‚ùå FAILURE: Check logs for detailed error output."
        }
        always {
            echo "üßπ Cleaning up Jenkins workspace..."
            deleteDir()
        }
    }
}
