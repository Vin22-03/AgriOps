pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        TF_DIR = "terraform"
    }

    stages {
        stage('Checkout Repository') {
            steps {
                echo "üì¶ Cloning AgriVisionOps repo..."
                git branch: 'main', url: 'https://github.com/Vin22-03/AgriOps.git', credentialsId: 'github-creds'
            }
        }

        stage('Environment Verification') {
            steps {
                echo "üß© Checking Terraform, AWS CLI, and Docker versions..."
                sh '''
                    terraform -version
                    aws --version
                    docker --version
                '''
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_DIR}") {
                    echo "‚öôÔ∏è Initializing Terraform for VPC + EKS..."
                    sh 'terraform init -input=false'
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir("${TF_DIR}") {
                    echo "üîç Validating Terraform configuration..."
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
                    dir("${TF_DIR}") {
                        echo "üó∫Ô∏è Creating Terraform Plan for EKS..."
                        sh '''
                            export AWS_REGION=${AWS_REGION}
                            terraform plan -input=false -out=tfplan.out
                        '''
                    }
                }
            }
        }

        stage('Manual Approval') {
            steps {
                input message: "‚ö†Ô∏è Proceed with applying Phase-2 Terraform changes?"
            }
        }

        stage('Terraform Apply') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
                    dir("${TF_DIR}") {
                        echo "üöÄ Applying Terraform changes to create EKS..."
                        sh '''
                            export AWS_REGION=${AWS_REGION}
                            terraform apply -auto-approve tfplan.out
                        '''
                    }
                }
            }
        }

        stage('Post-Deployment Outputs') {
            steps {
                dir("${TF_DIR}") {
                    echo "üì§ Showing EKS and VPC outputs..."
                    sh 'terraform output'
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Phase-2 (VPC + EKS) Deployment Successful!"
        }
        failure {
            echo "‚ùå Phase-2 failed. Please review the Jenkins logs."
        }
        always {
            echo "üßπ Cleaning workspace..."
            deleteDir()
        }
    }
}
